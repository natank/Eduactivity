nav.navbar.navbar-expand-lg.navbar-light.bg-light
  a.navbar-brand(href='/') EDUACTIVITY
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  .collapse.navbar-collapse#navbarSupportedContent
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href='/')
          | Home
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='/admin/') Admin
    form.form-inline.my-2.my-lg-0.mr-0.justify-content-end.mx-4
      input.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
      button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

    ul.nav.navbar-nav.navbar-right
      if !isLoggedIn
        li.mx-2
          a(href='/auth/signup').btn
            span.glyphicon.glyphicon-user
            |  Sign Up
        li
          a(href='/auth/login').btn
            span.glyphicon.glyphicon-log-in
            |  Login
      else
        li
          span.btn.text-info Hello #{user}

        li
          a(href='/auth/logout').btn
            span.glyphicon.glyphicon-log-out
            |  Logout