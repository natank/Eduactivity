extends ../templates/container.pug
block content
  include ../includes/header.pug 
  h1.text-center.my-4
    | DIY PRINTABLES FOR HOLIDAYS & PARTIES
  a.btn.btn-primary.btn-lg.mx-auto.my-4(href='/admin/createProduct', role='button') 
    | Create Product
  form.w-25.mx-auto
    div.form-group
      label(for="topics") Filter by Topic
      select(name="topics" id="topics").form-control
        option(value="XMAS") XMAS 
        option(value="NEW YEAR") NEW YEAR
        option(value="Unicorns") UNICORNS
      input(type="submit").btn.btn-primary.mx-auto.d-block.mt-4
  .products.my-5
    - for product in products
      .card.product
        img(src= product.imageUrl alt= #{product.title})
        .card-body
          h5.card-title = #{product.title}
          p.class-text
            = product.description
          a(href= /admin/product).btn.btn-outline-primary.btn-large.btn-lg.btn-block. 
            Edit
          a(href= /admin/delete-product/#{product._id}).btn.btn-outline-primary.btn-lg.btn-block Delete


